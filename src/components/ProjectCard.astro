---
const { project } = Astro.props;
---
<article class="card p-4 hover:shadow-lg transition-shadow">
  <h3 class="text-lg font-semibold">{project.title}</h3>
  <p class="text-sm text-gray-600 dark:text-gray-300 mt-2">{project.description}</p>
  <div class="mt-3 flex flex-wrap gap-2">
    {project.tech.map(t => (
      <span class="text-xs px-2 py-1 rounded-md border text-gray-600 dark:text-gray-200">{t}</span>
    ))}
  </div>

  <div class="mt-4 flex gap-3">
    {project.demo ? <a class="text-sm underline" href={project.demo} target="_blank" rel="noopener">Live demo</a> : null}
    {project.repo ? <a class="text-sm underline" href={project.repo} target="_blank" rel="noopener">GitHub</a> : null}
  </div>
</article>
